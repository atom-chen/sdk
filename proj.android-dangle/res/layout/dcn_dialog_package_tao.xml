<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dcn_dialog_common_width"
              android:layout_height="@dimen/dcn_dialog_common_height"
              android:background="@drawable/dcn_shape_dialog_bg"
              android:orientation="vertical">

    <include layout="@layout/dcn_dialog_common_titlebar"/>

    <!-- 抢号成功 -->
    <LinearLayout
        android:id="@+id/dcn_welfare_package_grab_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/dcn_welfare_package_grab_success_content"
            android:textColor="@color/dcn_light_black"/>

        <TextView
            android:id="@+id/dcn_welfare_package_dialog_grab_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/dcn_welfare_package_code"
            android:textColor="@color/dcn_light_black"/>

        <TextView
            android:id="@+id/dcn_welfare_package_dialog_grab_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/dcn_welfare_package_grab_copy"
            android:textColor="#4494BC"/>

    </LinearLayout>

    <!-- 预定成功 -->
    <LinearLayout
        android:id="@+id/dcn_welfare_package_order_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/dcn_welfare_package_order_success_content"
            android:textColor="@color/dcn_light_black"/>
    </LinearLayout>

    <!-- 淘号成功 -->
    <LinearLayout
        android:id="@+id/dcn_welfare_package_tao_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/dcn_welfare_package_tao_success_content"
            android:textColor="@color/dcn_light_black"/>

        <RelativeLayout
            android:id="@+id/dcn_welfare_package_code_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dcn_welfare_package_code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dcn_welfare_package_code"
                android:textColor="@color/dcn_light_black"/>

            <TextView
                android:id="@+id/dcn_welfare_package_copy_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/dcn_welfare_package_btn_copy"
                android:textColor="#4494BC"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dcn_welfare_package_code_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dcn_welfare_package_code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dcn_welfare_package_code"
                android:textColor="@color/dcn_light_black"/>

            <TextView
                android:id="@+id/dcn_welfare_package_copy_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/dcn_welfare_package_btn_copy"
                android:textColor="#4494BC"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dcn_welfare_package_code_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dcn_welfare_package_code3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/dcn_welfare_package_code"
                android:textColor="@color/dcn_light_black"/>

            <TextView
                android:id="@+id/dcn_welfare_package_copy_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/dcn_welfare_package_btn_copy"
                android:textColor="#4494BC"/>
        </RelativeLayout>


    </LinearLayout>

    <!-- 绑定手机号 -->
    <LinearLayout
        android:id="@+id/dcn_welfare_package_bind_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/dcn_welfare_package_bind_content"
            android:textColor="@color/dcn_light_black"/>

        <TextView
            android:id="@+id/dcn_welfare_package_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/dcn_welfare_package_bind"
            android:textColor="#4494BC"/>

    </LinearLayout>

</LinearLayout>